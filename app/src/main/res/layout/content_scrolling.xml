<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.test10.kola.test2.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d5d5d5"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <include
            android:id="@+id/inc_1"
            layout="@layout/card1"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

        </include>

        <include
            layout="@layout/card2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/inc_1"
            android:layout_alignLeft="@+id/inc_1"
            android:layout_alignRight="@+id/inc_1"
            android:id="@+id/inc_2">

        </include>


        <include
            layout="@layout/card3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/inc_2"
            android:layout_alignLeft="@+id/inc_2"
            android:layout_alignRight="@+id/inc_2"
            android:id="@+id/inc_3">

        </include>


        <include
            layout="@layout/card4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/inc_3"
            android:layout_alignLeft="@+id/inc_3"
            android:layout_alignRight="@+id/inc_3"
            android:id="@+id/inc_4">

        </include>

        <include
            layout="@layout/card5"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/inc_4"
            android:layout_alignLeft="@+id/inc_4"
            android:layout_alignRight="@+id/inc_4"
            android:id="@+id/inc_5">

        </include>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_comment"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_border"
            android:layout_below="@+id/inc_5"
            />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
