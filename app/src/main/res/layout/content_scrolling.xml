<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.test10.kola.test2.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d5d5d5"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <include
            android:id="@+id/inc_0"
            layout="@layout/card0"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

        </include>

        <include
            android:id="@+id/inc_1"
            layout="@layout/card1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/inc_0"
            android:layout_alignLeft="@+id/inc_0"
            android:layout_alignRight="@+id/inc_0"
            >

        </include>


        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="50dp"
            android:layout_below="@+id/inc_1"
            android:layout_alignLeft="@+id/inc_1"
            android:layout_alignRight="@+id/inc_1"
            android:layout_marginTop="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"

                />

            <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:alignItems="center"
                app:alignContent="center"
                app:flexDirection="row"
                android:layout_below="@+id/tx1"
                app:flexWrap="wrap"
                android:paddingLeft="9dp"
                >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler2"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            </com.google.android.flexbox.FlexboxLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <include
            layout="@layout/card3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/card2"
            android:layout_alignLeft="@+id/card2"
            android:layout_alignRight="@+id/card2"
            android:id="@+id/inc_3">

        </include>


        <android.support.v7.widget.CardView
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="50dp"
            android:layout_below="@+id/inc_3"
            android:layout_alignLeft="@+id/inc_3"
            android:layout_alignRight="@+id/inc_3"
            android:layout_marginTop="10dp"
            >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler4"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


        </android.support.v7.widget.CardView>

        <include
            layout="@layout/card5_recycler"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/card4"
            android:layout_marginTop="10dp"
            android:id="@+id/inc_5">

        </include>

        <Button
            android:id="@+id/comment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_comment"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_border"
            android:layout_below="@+id/inc_5"
            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/mainrecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_button"
            >


        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
